---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Inscription">
  <div class="min-h-screen flex items-center justify-center pt-32 pb-12">
    <div class="w-full max-w-md">
      <div class="bg-base-100 rounded border border-black/10 p-8">
        <h1 class="text-3xl font-display text-center mb-8">S'inscrire</h1>

        <form id="signup-form" class="space-y-4">
          <div>
            <label class="label">
              <span class="label-text">Nom</span>
            </label>
            <input 
              type="text" 
              id="name"
              placeholder="Votre nom"
              class="input input-bordered w-full"
              required
            />
          </div>

          <div>
            <label class="label">
              <span class="label-text">Email</span>
            </label>
            <input 
              type="email" 
              id="email"
              placeholder="votre@email.com"
              class="input input-bordered w-full"
              required
            />
          </div>

          <div>
            <label class="label">
              <span class="label-text">Mot de passe</span>
            </label>
            <input 
              type="password" 
              id="password"
              placeholder="••••••••"
              class="input input-bordered w-full"
              required
            />
          </div>

          <div id="error-message" class="alert alert-error hidden">
            <span id="error-text"></span>
          </div>

          <button type="submit" class="btn btn-accent w-full">
            S'inscrire
          </button>
        </form>

        <div class="divider my-6">OU</div>

        <button id="google-btn" type="button" class="btn btn-outline w-full gap-2">
          <svg class="w-5 h-5" viewBox="0 0 24 24">
            <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Continuer avec Google
        </button>

        <p class="text-center text-sm mt-6">
          Déjà inscrit ? 
          <a href="/login" class="link link-secondary">Se connecter</a>
        </p>
      </div>
      <div class="mx-auto max-w-prose text-left pt-12">
        Quelques secondes suffisent pour créer votre compte et retrouver vos créations à tout moment !
      </div>
    </div>
  </div>




  <script>
    const form = document.getElementById('signup-form') as HTMLFormElement | null;
    const errorDiv = document.getElementById('error-message') as HTMLElement | null;
    const errorText = document.getElementById('error-text') as HTMLElement | null;
    const googleBtn = document.getElementById('google-btn') as HTMLElement | null;

    // FORMULAIRE CLASSIQUE
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const name = (document.getElementById('name') as HTMLInputElement).value;
      const email = (document.getElementById('email') as HTMLInputElement).value;
      const password = (document.getElementById('password') as HTMLInputElement).value;

      try {
        const response = await fetch('/api/auth/signup', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, email, password })
        });

        const result = await response.json();

        if (response.ok) {
          window.location.href = '/creations';
        } else {
          if (errorText) errorText.textContent = result.error || 'Erreur d\'inscription';
          if (errorDiv) errorDiv.classList.remove('hidden');
        }
      } catch (err) {
        if (errorText) errorText.textContent = 'Erreur lors de l\'inscription';
        if (errorDiv) errorDiv.classList.remove('hidden');
      }
    });

    // GOOGLE OAUTH
    googleBtn?.addEventListener('click', async (e) => {
      e.preventDefault();
      
      try {
        const response = await fetch('/api/auth/google-login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const result = await response.json();
        
        if (result.redirectUrl) {
          window.location.href = result.redirectUrl;
        } else {
          if (errorText) errorText.textContent = 'Erreur connexion Google';
          if (errorDiv) errorDiv.classList.remove('hidden');
        }
      } catch (err) {
        console.error('Erreur Google:', err);
        if (errorText) errorText.textContent = 'Erreur connexion Google';
        if (errorDiv) errorDiv.classList.remove('hidden');
      }
    });
  </script>
</Layout>
